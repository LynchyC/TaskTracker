<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>
  <connectionStrings configSource="connectionStrings_Config.config" />
  <appSettings>
    <add key="vara" value="Coconut"/>
  </appSettings>


  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <extensions>
      <add assembly="NLog.Web" />
      <add assembly="NLog.Extended" />
    </extensions>

    <!-- make sure to set 'Copy To Output Directory' option for this file -->
    <!-- go to http://nlog-project.org/wiki/Configuration_file for more information -->
    <variable name="logDirectory" value="${basedir}/logs/${shortdate}" />
    <targets>
      <!-- roll log files every 60 days-->
      <target xsi:type="File" name="logFile" fileName="${logDirectory}/log.log" layout="${date:format=dd\/MM\/yyyy\ HH\:mm\:ss} | ${level} | ${message} |  ${callsite} | ${stacktrace} | ${exception}" archiveFileName="${basedir}/logs/log.{#}.txt" archiveEvery="Day" archiveNumbering="Rolling" maxArchiveFiles="60" concurrentWrites="true" />
    </targets>

    <rules>
      <logger name="*" minlevel="Debug" writeTo="logFile" enabled="true" />
    </rules>
  </nlog>

</configuration>
